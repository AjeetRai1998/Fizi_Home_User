<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/burger1"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50% OFF"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:layout_gravity="center"
                android:paddingRight="8dp"
                android:textStyle="bold"
                android:textColor="@color/red" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chahat Biryani"
                android:textSize="16dp"
                android:textColor="@color/pure_black"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast Food, Snacks"
                android:textSize="13dp"
                android:textColor="@color/color_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aliganj  |  0.2 kms"
                android:textSize="13dp"
                android:textColor="@color/black_lite"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.0"
                    android:textSize="13dp"
                    android:drawableLeft="@drawable/star"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".    36 mins "
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/color_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".    Rs 200 for two"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/speacial_offer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra Rs 30 off on first order"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_black"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>