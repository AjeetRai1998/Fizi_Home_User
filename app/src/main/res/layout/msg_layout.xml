<LinearLayout android:layout_weight="1"
    android:layout_width="match_parent"
    android:background="@drawable/outline_rect_black"
    android:backgroundTint="@color/color_white"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow Capsico to read the message and enter the code?"
            android:layout_marginTop="10dp"
            android:textColor="@color/pure_black"
            android:textSize="17dp"></TextView>

    </LinearLayout>
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are You Sure want Exit ?"
        android:textColor="#5F5E5E"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="right">

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deny"
            android:background="@color/transparent"
            android:textColor="@color/pure_black"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:button_duration="200"
            app:button_scale="0.93"/>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow"
            android:background="@color/transparent"
            android:textColor="@color/pure_black"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:button_duration="200"
            app:button_scale="0.93"/>
    </LinearLayout>

</LinearLayout>
