<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        app:contentPadding="10dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/close"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/new_gift"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Your Birthday "
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We're asking you this information to make your day special with Hungerji. "
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/color_black"
                android:textSize="13dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/notNow"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Not Now"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/rect_bg"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/roboto"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/add"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Add Now"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:background="@drawable/rect_bg"
                    android:backgroundTint="@color/color_black"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/color_white"
                    android:textSize="15sp"/>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
