<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fffde7"
    android:padding="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate us"
                android:textStyle="bold"
                android:textSize="17dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/pure_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="how do you like Capsico App?"
                android:textSize="14dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_clear_24"
            android:tint="@color/pure_black"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/lineUnsatisfied"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sad"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unsatisfied"
                android:textColor="@color/pure_black"
                android:textSize="15dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <View
            android:layout_width="50dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/lineLovedIt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_outline"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/love_it"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loved It!"
                android:textColor="@color/pure_black"
                android:textSize="15dp"
                android:fontFamily="@font/roboto"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineExpand"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How can we improve our service?"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="@color/pure_black"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Your feedback is really important to us.)"
            android:textStyle="normal"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/roboto"/>
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Tell Here..."
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/rect_bg_outline"
            android:textColor="@color/pure_black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/color_white"
            android:background="@color/color_green"
            android:text="Submit"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>