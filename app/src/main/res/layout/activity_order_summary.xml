<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refersh"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom_sheet_container"
        android:orientation="vertical"
        android:background="@color/color_white">
        <LinearLayout
            android:id="@+id/header"
            android:layout_margin="2dp"
            android:background="#f9a825"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORDER FROM "
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/color_white" />
                <TextView
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:textSize="14sp"
                    android:onClick="goToHelp"
                    android:textColor="@color/color_white"
                    />



            </LinearLayout>
            <TextView
                android:id="@+id/merchantName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_marginRight="15dp"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="27dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                />
            <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
                android:gravity="center"
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="@color/color_white"/>
            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate us on Google Play Store🙏🙏🙏"
                android:visibility="gone"
                android:textSize="13sp"
                android:background="@drawable/rect_bg_outline"
                android:padding="2dp"
                android:backgroundTint="@color/color_white"
                android:textColor="@color/color_blue"
                />
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noOfItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Item"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹100"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/black_lite"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/gray08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageForStatus"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/orderStatus1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textStyle="bold"
                       android:layout_marginLeft="5dp"
                       android:textSize="18sp"
                       android:textColor="@color/pure_black"
                       />
                   <TextView
                       android:id="@+id/refundTxt"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Your order amount has been refunded in your Capsico wallet.Use it to reorder."
                       android:layout_marginLeft="5dp"
                       android:textSize="11sp"
                       android:paddingTop="5dp"
                       android:layout_marginTop="5dp"
                       android:visibility="gone"
                       android:fontFamily="@font/roboto"
                       android:paddingBottom="5dp"
                       android:paddingRight="10dp"
                       android:paddingLeft="10dp"
                       android:textColor="@color/red"
                       android:background="@drawable/outline_rect_black"
                       />
                   <LinearLayout
                       android:id="@+id/taptoReorder"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="10dp"
                       android:visibility="gone"
                       android:layout_marginTop="5dp"
                       android:gravity="center_vertical">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Please, Tap to reorder"
                           android:layout_marginLeft="5dp"
                           android:textSize="15sp"
                           android:textColor="@color/color_blue"
                           />
                       <ImageView
                           android:layout_width="20dp"
                           android:tint="@color/color_blue"
                           android:layout_height="20dp"
                           android:src="@drawable/ic_baseline_refresh_24"/>
                   </LinearLayout>
               </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineProgrss"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.mackhartley.roundedprogressbar.RoundedProgressBar
                    android:id="@+id/custom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    app:rpbProgressColor="@color/color_green"
                    app:rpbCornerRadius="8dp"
                    app:rpbShowProgressText="false"
                    app:rpbProgressTextColor="@color/pure_black"
                    app:rpbBackgroundColor="@color/pure_black"
                    android:layout_margin="10dp"
                    app:rpbTextPadding="8dp"
                    app:rpbTextSize="10sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Wait...While Restaurant confirms your order."
                    android:textSize="12dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/pure_black"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/delNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:text="A delivery boy will be assigned for your order soon."
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/pure_black"
            android:background="@color/gray08"/>
        <LinearLayout
            android:id="@+id/layoutDeliveryBoy"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/gray08">

            <LinearLayout
                android:id="@+id/lineCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relVac"
                        android:layout_width="49dp"
                        android:background="@drawable/green_circle"
                        android:layout_height="49dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/deliveryBoyImg"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/deliveryBoyVacStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Boy"
                        android:visibility="gone"
                        android:textSize="13sp"
                        android:textColor="@color/color_white"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:background="@color/color_green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Boy Assigned"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/pure_black" />


                    <TextView
                        android:id="@+id/deliveryBoyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Boy"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@color/color_black" />
                    <TextView
                        android:id="@+id/deliveryBoydesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@color/color_black" />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center_vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Rating |"
                           android:textSize="13sp"
                           android:textColor="@color/color_black" />
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:tint="#ffd700"
                           android:src="@drawable/star" />
                       <TextView
                           android:id="@+id/rating"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=" | Rating 0.0"
                           android:textSize="13sp"
                           android:textColor="@color/color_black" />
                   </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/call_img"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/rateDeliveryBoy"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/gray08">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/deliveryBoyImg1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deliveryBoyName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Boy has delivered your order"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/pure_black" />

                    <TextView
                        android:id="@+id/deliveryBoyName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ramesh Bhatt"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@color/color_black" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/gray08"
                android:layout_margin="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/restImage"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        >
                        <TextView
                            android:id="@+id/merchantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/pure_black"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/merchantAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pure_black"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/trangle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="-1.5dp"
                        android:background="@drawable/triangle"
                        android:backgroundTint="#6BFE9E10"/>
                    <TextView
                        android:id="@+id/layoutNotice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/pure_black"
                        android:textSize="14dp"
                        android:text=""
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#6BFE9E10"
                        android:background="@drawable/outline_rect_black"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemsList"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/billDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BILL DETAILS"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/color_black" />

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:tint="@color/pure_black"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dotted"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Total"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/color_black"
                            />
                        <TextView
                            android:id="@+id/subTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/color_black"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lineotherCharges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/otherCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Taxes and Charges"
                                android:textColor="@color/pure_black"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to View"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/gray"
                                android:textSize="10dp"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/packingCharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/color_black"
                            />
                    </LinearLayout>

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:tint="@color/pure_black"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/dotted"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill Total"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"
                            />

                        <TextView
                            android:id="@+id/totalAmout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0.00"
                            android:layout_marginRight="10dp"
                            android:textSize="16sp"
                            android:textColor="@color/color_black"
                            android:textStyle="bold"
                            />
                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@color/gray08"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:text="YOU"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:background="@color/pure_black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/addNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Alternate Phone Number"
                        android:textSize="12dp"
                        android:background="@drawable/rect_bg_outline"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/color_blue"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lineMobile"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:background="#F4F4F4"
                    android:hint="Enter Mobile Number"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:maxLength="10"/>
                <Button
                    android:id="@+id/submitNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/color_white"
                    android:background="@drawable/rect_bg_outline"
                    android:backgroundTint="@color/color_green"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@color/gray08"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="ADDRESS"
                    android:textSize="15dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:background="@color/pure_black"
                    />

                <TextView
                    android:id="@+id/userAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/pure_black"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/color_green"
                    android:src="@drawable/checked_icon"/>
                <TextView
                    android:id="@+id/orderStatusWithDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:text="Order delivered on June 28 ,9:25 PM by Xyz"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/statusList"
                />







        </LinearLayout>


        <TextView
            android:id="@+id/back_icon"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:onClick="goBack"
            android:text="Go Back"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textAllCaps="true"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_white"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rect_bg_outline"
