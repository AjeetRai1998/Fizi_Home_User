<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/productimage"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/non_veg" />

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/pure_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete_icon"
                    android:layout_gravity="center"
                    app:tint="@color/colorAccent"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/outOfStock"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Out Of Stock"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:id="@+id/line_qty"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/minus_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:backgroundTint="@color/oragne"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@color/color_black"
                                android:gravity="center"
                                android:id="@+id/minusbutton"
                                android:padding="7dp"
                                android:src="@drawable/minus"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                app:tint="@color/color_white" />

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/quantity_text_view"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto"
                        android:text="0"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/pure_black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/plus_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:backgroundTint="@color/color_orange"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@color/color_black"
                                android:gravity="center"
                                android:id="@+id/pulsbutton"
                                android:padding="7dp"
                                android:src="@drawable/plus"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                app:tint="@color/color_white" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:text="â‚¹0"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/pure_black"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:fontFamily="@font/roboto"
                        android:padding="2dp"
                        android:gravity="center"
                        />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/addOnItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="smosha ,chatni "
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/pure_black"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/customize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customize"
                android:textColor="@color/color_blue"
                android:visibility="visible"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:drawableTint="@color/color_blue"
                android:drawableRight="@drawable/down_arrow"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>