<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:background="#EFF1F4"
    android:orientation="vertical">
  <LinearLayout
      android:layout_above="@id/bottom"
      android:orientation="vertical"
      android:layout_alignParentTop="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:id="@+id/line1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/type"
              android:layout_width="16dp"
              android:layout_height="16dp"
              android:layout_marginLeft="5dp"
              android:layout_gravity="center_vertical"
              android:src="@drawable/vegdot"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/product_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12dp"
                  android:layout_marginLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingLeft="10dp"
                  android:textColor="@color/pure_black"
                  android:text="Make it tasty !"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:layout_marginLeft="10dp"
                  android:paddingRight="10dp"
                  android:textStyle="bold"
                  android:paddingLeft="10dp"
                  android:textColor="@color/pure_black"
                  android:text="Customize as per your taste!"/>
          </LinearLayout>
      </LinearLayout>
      <View
          android:id="@+id/view"
          android:layout_width="match_parent"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          android:layout_height="1dp"
          android:background="@color/gray1"/>
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/addOnItemList"
          />
  </LinearLayout>
   <LinearLayout
       android:id="@+id/bottom"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:id="@+id/sel_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:textSize="13dp"
           android:textColor="@color/pure_black"
           android:text="Customize Your Meal !"/>
       <com.skydoves.elasticviews.ElasticLayout
           android:id="@+id/add_to_cart"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_margin="10dp"
           app:layout_duration="200"
           android:background="@color/colorAccent"
           app:layout_scale="0.93">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/total_amount"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Item Total : \u20b9"
                   android:textSize="15dp"
                   android:layout_weight="1"
                   android:fontFamily="@font/roboto"
                   android:textColor="@color/color_white"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="ADD ITEM"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:fontFamily="@font/roboto"
                   android:textColor="@color/color_white"/>
           </LinearLayout>
       </com.skydoves.elasticviews.ElasticLayout>
   </LinearLayout>
</RelativeLayout>