<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:background="@android:color/transparent"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#1CFCD090"
       android:padding="10dp"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/type"
           android:layout_width="16dp"
           android:layout_height="16dp"
           android:layout_marginLeft="5dp"
           android:layout_gravity="center_vertical"
           android:src="@drawable/vegdot"/>
       <TextView
           android:id="@+id/product_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:textSize="16dp"
           android:textColor="@color/pure_black"
           android:text="Make it tasty !"/>
   </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="13dp"
        android:textColor="@color/color_black"
        android:text="Your Previous Customization"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/iwill_choose"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text=" I'LL CHOOSE"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:button_duration="200"
                android:textColor="@color/color_blue"
                android:background="@drawable/rect_bg_outline"
                app:button_scale="0.93"/>
            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/repeat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:text="REPEAT"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:button_duration="200"
                android:textColor="@color/color_white"
                android:background="@color/color_blue"
                app:button_scale="0.93"/>

        </LinearLayout>
</LinearLayout>