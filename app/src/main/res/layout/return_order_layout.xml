<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="Return Order"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_cancel_24"
            android:backgroundTint="@color/colorAccent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Item To be Return"
        android:textColor="@color/color_black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_return_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please describe Reason"
        android:textColor="@color/color_black"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"/>
    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:minLines="4"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:gravity="top|start"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:hint="Write your reason...."
        android:layout_marginTop="5dp"
        android:background="@drawable/rect_stroke_bg"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fb_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:text="Return Order"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:backgroundTint="@color/color_black"
        app:cornerRadius="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"/>



</LinearLayout>