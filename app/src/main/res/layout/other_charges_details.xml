<androidx.cardview.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/pure_black"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:contentPadding="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/color_white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pure_black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"
            android:text="Taxes and Charges Details"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/otherCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant GST"
                android:textColor="@color/gray"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/restCharge"
                android:layout_width="wrap_content"
                android:textColor="@color/pure_black"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:text="₹ 0"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packing Charges"
                android:textColor="@color/gray"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/packingCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pure_black"
                android:fontFamily="@font/roboto_medium"
                android:text="₹ 0"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charge"
                android:textColor="@color/gray"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/deliveryFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pure_black"
                android:fontFamily="@font/roboto_medium"
                android:text="₹ 0"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>